@{
    string currentController = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"]);
    switch (currentController)
    {
        case "Login":
            Layout = "~/Views/Shared/_LoginLayout.cshtml";
            break;
        case "Error":
            Layout = "~/Views/Shared/_LoginLayout.cshtml";
            break;
        case "":
            Layout = "~/Views/Shared/_Home.cshtml";
            break;
        case "Home":
            Layout = "~/Views/Shared/_Home.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
}

  