@{
    string currentController = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"]);
    string currentAction = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Action"]);
    switch (currentController)
    {
        case "Login":
            Layout = "~/Views/Shared/_LoginLayout.cshtml";
            break;
        case "Error":
            Layout = "~/Views/Shared/_LoginLayout.cshtml";
            break;
        case "Home":
            Layout = "~/Views/Shared/_Home.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }

    if (currentController.Equals("Direction") && !currentAction.Equals("Index"))
    {
        Layout = "~/Views/Shared/_Home.cshtml";
    }
}

  