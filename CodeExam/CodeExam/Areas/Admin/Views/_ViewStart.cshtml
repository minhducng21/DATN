@{
    string currentUser = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"]);
    switch (currentUser)
    {
        case "Login":
            Layout = "~/Areas/Admin/Views/Shared/_LoginLayout.cshtml";
            break;
        default:
            Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
            break;
    }
}
