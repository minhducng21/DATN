@using CodeExam.Models
@{
    ViewBag.Title = "Role";
}

<script src="~/Scripts/app/Role/RoleController.js"></script>
<div class="main-panel" ng-controller="RoleController">
    <div class="content">
        <div class="col-md-12">
            <div class="card card-plain">
                <div class="card-header card-header-primary">
                    <h4 class="card-title mt-0">Role</h4>
                    <i class="material-icons pull-right" style="font-size: 30px; cursor: pointer" ng-click="openModalRole()">
                        add_circle
                    </i>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="">
                            <th>
                                Name
                            </th>
                            <th></th>
                            </thead>
                            <tbody>
                                <tr ng-repeat="role in roles">
                                    <td>{{role.RoleName}}</td>
                                    <td @*ng-if="role.RoleId!=1"*@>
                                        <a href="" ng-click="getRoleById(role.RoleId)"><i class="material-icons">edit</i></a>
                                        <a href=""><i class="material-icons" ng-click="confirmDeleteRole(role.RoleId)">delete</i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            @*Add/Edit role modal*@
            <div class="modal fade" id="roleModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div class="card-header-primary">
                                <h4 class="card-title text-primary">{{modalTitle}}</h4>
                            </div>
                        </div>
                        <div class="modal-body">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <input type="text" ng-model="role.RoleName" />
                                    <table class="table table-hover">
                                        <thead class="">
                                        <th>Controller</th>
                                        <th>Area</th>
                                        <th>Active</th>
                                        <th></th>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="ctrl in ctrls">
                                                <td>{{ctrl.Ctrl}}</td>
                                                <td>{{ctrl.Area}}</td>
                                                <td>
                                                    <input type="checkbox" ng-model="ctrl.IsChecked" />
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button class="btn btn-primary" ng-show="action=='Add'" ng-click="addRole(ctrls)">{{action}}</button>
                            <button class="btn btn-primary" ng-show="action=='Edit'" ng-click="editRole(ctrls)">{{action}}</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--Delete Modal -->
            <div class="modal fade" id="deleteRole" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-danger" id="exampleModalLabel">Delete</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Bạn có chắc chắn muốn xóa?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" ng-click="deleteRole()">OK</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>